#include <bits/stdc++.h>
using namespace std;
int main() {
  int a;
  cin >> a;
  cout << a <<endl;
  for(int i=0; i <= 10000; i++){
    if(a==1){
      break;
    }
    else if(a%2 == 0){
      a=a/2;
      cout << a <<endl;
    }
    else if(a%2 != 0){
      a=(3*a+1);
      cout << a <<endl;
    }
  cin >> a;
  }
}
